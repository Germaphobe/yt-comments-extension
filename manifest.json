{
    "manifest_version": 3,
    "name": "YouTube Comments Enhanced",
    "version": "0.1",
    "web_accessible_resources": [
        {
            "resources": ["assets/*.svg"],
            "matches": ["https://*.youtube.com/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}