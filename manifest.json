{
    "manifest_version": 3,
    "name": "YouTube Comments Enhanced",
    "version": "1.0",
    "description": "Add button shortcuts for formatting (bold, italic, strikethrough, subscript) when writing YouTube comments",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}